<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_permission_clean"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="@dimen/permission_margin_24" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/permission_margin_24"
        android:textSize="14sp"
        android:textColor="@color/tx_c"
        android:layout_margin="@dimen/permission_margin_16"
        android:text="@string/permission_dialog_desc"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/iv_icon" />

    <Button
        android:id="@+id/bt_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/permission_margin_24"
        android:background="@drawable/permission_suggest_bt_bg"
        android:paddingBottom="@dimen/permission_margin_10"
        android:paddingLeft="@dimen/permission_margin_44"
        android:paddingRight="@dimen/permission_margin_44"
        android:paddingTop="@dimen/permission_margin_10"
        android:text="@string/permission_dialog_button_continue"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bt_continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/permission_margin_16"
        android:paddingBottom="@dimen/permission_margin_16"
        android:text="@string/permission_dialog_suggest"
        android:textColor="@color/permission_suggest"
        android:textSize="12sp" />
</android.support.constraint.ConstraintLayout>